<volume type="file">
  <name>{{ vm_name }}</name>
  <capacity unit="G">{{ disk_size }}</capacity>
  <format type="qcow2"/>  
  <target>
    <path>/VMs/images/{{ image }}</path>
    <clusterSize unit='KiB'>256</clusterSize>
    <features>
      <lazy_refcounts/>
      <extended_l2/>
    </features>
  </target>
  <backingStore>
    <path>/VMs/backups/{{ vm_name }}_{{ time.now }}.backup.qcow2</path>
    <format type="qcow2"/>
    <permissions>
      <owner>107</owner>
      <group>107</group>
      <mode>0744</mode>
      <label>{{ vm_name }}_image_t</label>
    </permissions>
  </backingStore>  
  <allocation>0</allocation>  
</volume>
